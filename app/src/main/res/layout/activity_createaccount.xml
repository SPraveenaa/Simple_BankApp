<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wal01"
    android:layout_height="match_parent"
    tools:context=".Createaccount">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lankaBk"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="right"
        android:text="Lanka Bank"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/lio"
        android:layout_marginStart="130dp"
        android:layout_marginTop="15dp"
        android:id="@+id/image01"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/image01"
        android:id="@+id/line01"
        />

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:gravity="left"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstnameInput"
        android:textColorHint="@color/black"
        android:layout_below="@id/createAccount"
        style="@style/Platform.MaterialComponents"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/firstname"
            style="@style/Platform.MaterialComponents"
            android:hint="First Name"
            android:background="#15ffffff"
            android:backgroundTint="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastnameInput"
        android:textColorHint="@color/black"
        android:layout_below="@id/firstnameInput"
        style="@style/Platform.MaterialComponents"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/lastname"
            style="@style/Platform.MaterialComponents"
            android:hint="Last Name"
            android:background="#15ffffff"
            android:backgroundTint="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nicInput"
        android:textColorHint="@color/black"
        android:layout_below="@id/lastnameInput"
        style="@style/Platform.MaterialComponents"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/nic"
            style="@style/Platform.MaterialComponents"
            android:hint="NIC/Passport Number"
            android:background="#15ffffff"
            android:backgroundTint="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobilenumberInput"
        android:textColorHint="@color/black"
        android:layout_below="@id/nicInput"
        style="@style/Platform.MaterialComponents"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/mobilenumber"
            style="@style/Platform.MaterialComponents"
            android:hint="Mobile Number"
            android:background="#15ffffff"
            android:backgroundTint="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailInput"
        android:textColorHint="@color/black"
        android:layout_below="@id/mobilenumberInput"
        style="@style/Platform.MaterialComponents"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            style="@style/Platform.MaterialComponents"
            android:hint="Email Address"
            android:background="#15ffffff"
            android:backgroundTint="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailPasswordInput"
            android:textColorHint="@color/black"
            android:layout_below="@id/emailInput"
            style="@style/Platform.MaterialComponents"
            android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
            >

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/emailPassword"
                style="@style/Platform.MaterialComponents"
                android:hint="Email Password"
                android:background="#15ffffff"
                android:backgroundTint="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gendertxt"
            android:layout_below="@+id/emailPasswordInput"
            android:layout_marginTop="22dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:layout_marginStart="36dp"
            />

        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailPasswordInput"
            android:layout_marginStart="130dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

        </RadioGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateInput"
            android:textColorHint="@color/black"
            android:layout_below="@id/genderRadioGroup"
            style="@style/Platform.MaterialComponents"
            android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
            >

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/dateEditText"
                style="@style/Platform.MaterialComponents"
                android:hint="Date of Birth"
                android:background="#15ffffff"
                android:backgroundTint="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:inputType="none"
                android:focusable="false"
                android:layout_below="@+id/genderRadioGroup"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressInput"
            android:textColorHint="@color/black"
            android:layout_below="@+id/dateInput"
            style="@style/Platform.MaterialComponents"
            android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
            >

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                style="@style/Platform.MaterialComponents"
                android:hint="Address"
                android:background="#15ffffff"
                android:backgroundTint="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <Spinner
            android:id="@+id/spinner"
            android:layout_below="@id/addressInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:outlineProvider="background"
            android:entries="@array/dropdown_options" />


        <LinearLayout
            android:id="@+id/cardPaymentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/spinner"
            android:visibility="gone"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/master"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:id="@+id/master"
                />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/visa"
                android:layout_marginStart="140dp"
                android:layout_marginTop="15dp"
                android:id="@+id/visa"
                />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/paypal"
                    android:layout_marginStart="230dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/paypal"
                    />

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardPay"
                android:textColorHint="@color/black"
                style="@style/Platform.MaterialComponents"
                android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                >

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardnumberInput"
                    style="@style/Platform.MaterialComponents"
                    android:hint="Card Number"
                    android:background="#15ffffff"
                    android:backgroundTint="@color/black"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"
                    android:inputType="none"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expiredDate"
                android:textColorHint="@color/black"
                style="@style/Platform.MaterialComponents"
                android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                >

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ExDateInput"
                    style="@style/Platform.MaterialComponents"
                    android:hint="Expired: Month/Day"
                    android:background="#15ffffff"
                    android:backgroundTint="@color/black"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"
                    android:inputType="none"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cvv"
                android:textColorHint="@color/black"
                style="@style/Platform.MaterialComponents"
                android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                >

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cvvInput"
                    style="@style/Platform.MaterialComponents"
                    android:hint="CVV number"
                    android:background="#15ffffff"
                    android:backgroundTint="@color/black"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"
                    android:inputType="none"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amountEnter"
                android:textColorHint="@color/black"
                android:layout_below="@id/genderRadioGroup"
                style="@style/Platform.MaterialComponents"
                android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                >

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/AmountEnterInput"
                    style="@style/Platform.MaterialComponents"
                    android:hint="Cash in Rs."
                    android:background="#15ffffff"
                    android:backgroundTint="@color/black"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"
                    android:inputType="none"
                    android:focusable="false"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Add your specific features for card payment option here -->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bocAccountTransferLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/spinner"
            android:visibility="gone"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accnum"
                android:textColorHint="@color/black"
                style="@style/Platform.MaterialComponents"
                android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                >

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/accNumInput"
                    style="@style/Platform.MaterialComponents"
                    android:hint="Account Number"
                    android:background="#15ffffff"
                    android:backgroundTint="@color/black"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"
                    android:inputType="none"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amount02"
                android:textColorHint="@color/black"
                style="@style/Platform.MaterialComponents"
                android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                >

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/amountInput"
                    style="@style/Platform.MaterialComponents"
                    android:hint="Cash in Rs."
                    android:background="#15ffffff"
                    android:backgroundTint="@color/black"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"
                    android:inputType="none"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Add your specific features for BOC account transfer option here -->

        </LinearLayout>


        <Button
            android:id="@+id/createAccountDoneBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/addressInput"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="135dp"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="5dp"
            android:text="Done" />



</RelativeLayout>

</ScrollView>