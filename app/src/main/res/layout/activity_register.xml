<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wal01"
    android:layout_height="wrap_content"
    tools:context=".Register">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/lankaBk"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="right"
        android:text="Lanka Bank"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/lio"
            android:layout_marginStart="130dp"
            android:layout_marginTop="15dp"
            android:id="@+id/image01"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/image01"
            />

    <TextView
        android:id="@+id/registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:gravity="left"
        android:text="Registration"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberAcc"
            android:textColorHint="@color/black"
            android:layout_below="@id/registration"
            style="@style/Platform.MaterialComponents"
            android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
            >
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/numberAccInput"
                style="@style/Platform.MaterialComponents"
                android:hint="Account number"
                android:background="#15ffffff"
                android:backgroundTint="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                />

        </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInputName"
                    android:textColorHint="@color/black"
                    android:layout_below="@id/numberAcc"
                    style="@style/Platform.MaterialComponents"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                    >

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/uname"
                        style="@style/Platform.MaterialComponents"
                        android:hint="Username"
                        android:background="#15ffffff"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInputemail"
                    android:layout_below="@id/txtInputName"
                    android:textColorHint="@color/black"
                    style="@style/Platform.MaterialComponents"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                    >

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        style="@style/Platform.MaterialComponents"
                        android:hint="Email"
                        android:textColorHint="@color/black"
                        android:background="#15ffffff"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInputpassword"
                    android:textColorHint="@color/black"
                    android:layout_below="@id/txtInputemail"
                    style="@style/Platform.MaterialComponents"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                    >

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ps"
                        style="@style/Platform.MaterialComponents"
                        android:hint="Password"
                        android:textColorHint="@color/black"
                        android:background="#15ffffff"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInputreenterps"
                    android:textColorHint="@color/black"
                    android:layout_below="@id/txtInputpassword"
                    style="@style/Platform.MaterialComponents"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                    >

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/reps"
                        style="@style/Platform.MaterialComponents"
                        android:hint="Re enter password"
                        android:textColorHint="@color/black"
                        android:background="#15ffffff"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInputNIC"
                    android:textColorHint="@color/black"
                    android:layout_below="@id/txtInputreenterps"
                    style="@style/Platform.MaterialComponents"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                    >

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nic"
                        style="@style/Platform.MaterialComponents"
                        android:hint="NIC/Passport number"
                        android:textColorHint="@color/black"
                        android:background="#15ffffff"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/done"
                    android:text="Done"
                    android:textStyle="bold"
                    android:layout_below="@id/txtInputNIC"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="10dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back1"
                    android:text="Back"
                    android:textStyle="bold"
                    android:layout_below="@id/txtInputNIC"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="10dp"
                    />

                </RelativeLayout>

            </ScrollView>